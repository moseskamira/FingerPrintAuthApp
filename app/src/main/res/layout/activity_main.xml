<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fingure_print_auth_app"
            android:id="@+id/fingure_title"
            android:layout_marginTop="50dp"
            android:textSize="24sp"
            android:layout_centerHorizontal="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/fingure_title"
            android:src="@drawable/ic_launcher_web"
            android:layout_centerInParent="true"
            android:id="@+id/fingure_scanner"
            android:layout_marginTop="50dp"
            android:scaleType="fitXY"

            android:contentDescription="@string/fingure_print_image"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fingure_scanner"
            android:text="@string/place_your_fingure_to_unlock"
            android:id="@+id/prompt_message"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:textSize="18sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>




</RelativeLayout>